<script src="~/Assets/jquery-loading-master/loading.js"></script>

    @RenderSection("Scripts", false)
    <script>
        $(function () {
            $('div[data-url]').each(function (i, item) {
                $(item).load($(item).data('url'));
            });
        })
        
        function LoadingRun() {
            $('#bodyLoading').loading({
                message: 'Please wait...'
            });
        }
        function LoadingStop() {
            $('#bodyLoading').loading('stop');
        }
    </script>

</body>
</html>